<% layout('layout') %>
<div id="wrapper">
  <% include ./partials/sidebar %>
  <div id="page-content-wrapper">
    <% include ./partials/navbar%>
    <div class="row">
      <div class="col-md-9">
        <div class="bodyDiv">
         <h4>Show Blog</h4>
          <% for(let i = 0; i < blog.length; i++) { %>
            <div class="thumbnail">
              <div class="caption">
                <h3><%= blog[i].title %></h3>
                <p><%= blog[i].description %></p>
                <p>
                  <a href="#" class="btn btn-primary" role="button">Go somewhere</a>
                </div>
            </div>
          <% } %>
        </div>
        <div class="container-fluid main_body">
          <div class="bodyDiv">
            <h4>Write Blog</h4>
            <form action="addpost" method="post">
              <div class="form-group">
                <label for="">Title</label>
                <input class="form-control" name="title" value="" type="text" style="margin-bottom: 20px;"/>
              </div>
              <div class="form-group">
                <label for="">Description</label>
                <textarea class="form-control" name="description" type="text" rows="8" cols="80" ></textarea>
              </div>
              <div class="form-group">
                <input class="form-control btn btn-primary button-submit" id="rate" name="rate" value="Create" type="submit"/>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
