<% layout('layout2') %>
<div id="wrapper">
  <% include ../partials/sidebar %>
  <div id="page-content-wrapper">
    <% include ../partials/navbar %>
    <div class="container-fluid main_body">
      <div class="bodyDiv">
        <h4>Companies Profiles</h4>
        <div class="row mainDiv">
          <div class="innerDiv">
            <div class="col-md-3" style="margin-bottom: 30px;">
              <img src="/uploads/<%= company.image %>" width="270px" height="270px" alt="" class="companyListItemLogo" />
              <div class="companyListItemInfo">
                <h3>
                  <%= company.name %>
                </h3>
                <span>
                  <i class="star"></i>
                  *****
                </span>
                <div class="info-company">
                  <i class="fa fa-building-o"><%= company.city %>, <%= company.country %></i>
                  <i class="fa fa-map-marker"><%= company.sector %></i>
                  <i class="fa fa-external-link">
                    <a href="testing.com" target="_blank"><%= company.website %></a>
                  </i>
                </div>
                

                <div class="action-company margin-top-20">
                  <a href="/review/<%= company._id %>" class="btn btn-success" title="">Rate this company</a>
                  <a href="" class="btn btn-info">View company employee</a>

                  <% if(user.company.name !== company.name) { %>
                    <a href="/company/register-employee/<%= id %>"
                      class="btn btn-primary">
                      Register me as an employee
                    </a>
                  <% } else { %>
                    <h5 class="is-an-employee" style="text-transform: uppercase; font-size: 16px; color: #337ab7;">
                      <b>You are an employee</b>
                    </h5>

                  <% } %>
                  
                </div>

                <h3 class="average margin-top-15">Average Rating</h3>
                <h5 class="star"></h5>
                <p>Based on 5 review(s)</p>
              </div>
            </div>

            <div class="col-md-9 colDiv">
              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-4">
                    <div class="count">
                      <h1>5</h1>
                      <h2>Ratings</h2>
                      <h3>Total Ratings received</h3>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="count">
                      <h1>25</h1>
                      <h2>Ratings</h2>
                      <h3>Total Ratings received</h3>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="count">
                      <h1>
                        <span class="star"></span>
                      </h1>
                      <h2>Average Rating (5.5)</h2>
                      <h3>Based on 5 reviews</h3>
                    </div>
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="review">
                    <h5>Review (5)</h5>
                      <div class="linkDiv">
                        <a href="" class="btn btn-success">
                          Write review
                        </a>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>